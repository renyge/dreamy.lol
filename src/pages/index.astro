---
import Layout from '../layouts/Layout.astro';
const pageTitle = "Clementine's Website";
---
<Layout pageTitle={pageTitle}>
    <div class="gif">
        <img width="300" height="259" alt="RaccoonSpaceGif" src="/space.webp"/>
    </div>
